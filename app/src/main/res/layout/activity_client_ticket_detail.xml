<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    >

    <TextView
        android:id="@+id/ticketTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:text="Ticket Title"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/ticketDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticketTitleTextView"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="Ticket Description"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ticketStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticketDescriptionTextView"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="Status"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ticketCommentsTextView"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:layout_below="@id/ticketStatusTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="Comments"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ticketCommentsTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:hint="Add a comment"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/submitCommentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/commentEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF5722"
        android:text="Submit Comment"
        android:textColorHighlight="#FF5722"
        android:textColorLink="#FF5722" />

</RelativeLayout>
